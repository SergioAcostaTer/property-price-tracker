{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: infra up",
      "type": "shell",
      "command": "docker compose -f \"${workspaceFolder}/docker-compose.dev.yml\" up -d --build"
    },
    {
      "label": "Dev: infra down",
      "type": "shell",
      "command": "docker compose -f \"${workspaceFolder}/docker-compose.dev.yml\" down -v"
    },
    {
      "label": "Prod: up",
      "type": "shell",
      "command": "docker compose -f \"${workspaceFolder}/docker-compose.prod.yml\" --env-file \"${workspaceFolder}/.env.prod\" up -d --build"
    },
    {
      "label": "Prod: down",
      "type": "shell",
      "command": "docker compose -f \"${workspaceFolder}/docker-compose.prod.yml\" down -v"
    },
    {
      "label": "Logs: app (dev)",
      "type": "shell",
      "command": "docker compose -f \"${workspaceFolder}/docker-compose.dev.yml\" logs -f app"
    }
  ]
}